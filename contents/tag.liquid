---
    layout: 'home.liquid'
    pagination:
        data: collections
        size: 1
        alias: tag
    permalink: /tags/{{ tag }}/
    eleventyExcludeFromCollections: true
    eleventyComputed:
     title: Tagged '{{tag}}'
---


<ul style="width: 60%; margin-inline: auto;">
  {% assign taglist = collections[tag] %}
  {% for post in taglist | reverse %}
    <li>
      <a href="{{ post.url }}">{{ post.data.title }}</a>
    </li>
  {% endfor %}
</ul>